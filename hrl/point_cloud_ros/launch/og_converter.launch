<!--
Subscribes to PointCloud from the narrow stereo on the PR2, converts
is to an occupancy grid and re-publishes it.
The python node uses mayavi to display the occupancy grid as a
point cloud.
-->

<launch>
    <!--
    <node pkg="point_cloud_ros" type="og_sample.py" name="og_sample_mayavi" output="screen" respawn="false">
        <param name="mode" value="mayavi" />
    </node>

    <node pkg="point_cloud_ros" type="og_sample.py" name="og_sample_relay" output="screen" respawn="false">
        <param name="mode" value="relay" />
        <remap from="relay_og_in" to="/occupancy_grid"/>
    </node>
    -->

    <node pkg="point_cloud_ros" type="occupancy_grid_converter"
        name="occupancy_grid_converter" output="screen"
        respawn="false" >
        <remap from="points_in" to="/narrow_stereo/points"/>
        <remap from="og_out" to="/occupancy_grid"/>
        <remap from="og_in" to="/occupancy_grid"/>
    </node>
</launch>



