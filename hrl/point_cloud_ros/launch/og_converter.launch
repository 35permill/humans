<!--
Subscribes to PointCloud from the narrow stereo on the PR2, converts
is to an occupancy grid and re-publishes it.
The python node uses mayavi to display the occupancy grid as a
point cloud.
-->

<launch>

    <node pkg="point_cloud_ros" type="differencing_node.py" name="og_differencing_node" output="screen" respawn="false">
    </node>

    <node pkg="point_cloud_ros" type="pc_to_og" name="pc_to_og" output="screen" respawn="false" >
        <remap from="points_in" to="/narrow_stereo/points"/>
        <remap from="og_out" to="/occupancy_grid"/>
    </node>

    <node pkg="point_cloud_ros" type="og_to_pc" name="og_to_pc" output="screen" respawn="false" >
        <remap from="og_in" to="/difference_occupancy_grid"/>
    </node>

</launch>



