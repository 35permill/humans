<launch>
    <include file="$(find gt_pr2)/machine.launch"/>
    <node name="laser_user_interface" pkg='laser_interface' type='user_interface_node.py' args='params.xml' output='screen'/>
    <node name="laser_pointer_detector" pkg="laser_interface" type="laser_pointer_detector_node.py" machine="c1"
                output="screen" 
                args="c wide_stereo_raw -k wide_stereo -f $(find laser_interface)/PatchClassifier.dataset.pickle">
        <rosparam file="$(find laser_interface)/sunny.yaml"/>
        <rosparam>
            max_blob_area                : 400  
            laser_point_size             : 40.0 
            min_age                      : 5    
            number_of_learners           : 40   
            pca_variance_retain          : 0.95 
            
            tracker_max_pix_treshold     : 30.0 
            tracker_max_time_threshold   : 3     
            
            detector_frame               : '/wide_stereo_optical_frame'
            classification_window_width  : 7     
            color_channel                : green
        </rosparam>
    </node>
</launch>
