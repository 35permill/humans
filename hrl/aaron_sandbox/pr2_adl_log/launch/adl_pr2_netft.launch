<launch>
<!-- Confirm the offset distance!!! -->
    <arg name="scratcher_dist" value="0.110"/>
    <arg name="shaver_dist" value="0.100"/>

    <node name="l_wrist_ft_raw"
		pkg="netft_rdt_driver" 
		type="netft_node" 
		args="10.68.0.60" 
		respawn="true">
    <remap from="/netft_data" to="/l_wrist_ft_raw"/>
    </node>

   <node pkg="tf" type="static_transform_publisher" name="r_scratcher_tip_frame_adl" args="$(arg scratcher_dist) 0 0 0 0 0 /r_gripper_tool_frame /r_scratcher_tip_adl 10" />

   <node pkg="tf" type="static_transform_publisher" name="l_scratcher_tip_frame_adl" args="$(arg scratcher_dist) 0 0 0 0 0 /l_gripper_tool_frame /l_scratcher_tip_adl 10" />

   <node pkg="tf" type="static_transform_publisher" name="r_shaver_tip_frame_adl" args="$(arg shaver_dist) 0 0 0 0 0 /r_gripper_tool_frame /r_shaver_tip_adl 10" />

   <node pkg="tf" type="static_transform_publisher" name="l_shaver_tip_frame_adl" args="$(arg shaver_dist) 0 0 0 0 0 /l_gripper_tool_frame /l_shaver_tip_adl 10" />

</launch>
